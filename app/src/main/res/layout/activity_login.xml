<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="br.com.chapada.Autenticação.Login">

    <TextView
        android:id="@+id/NomeDoApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/preto100"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Descrição"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:text="@string/Descrição"
        android:textSize="25sp" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@color/transparente">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/ImputEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:hint="@string/EmailHint"
            android:inputType="text"
            android:singleLine="true"
            android:textAlignment="center" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/ImputSenha"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:fontFamily="@font/inter_medium"
            android:hint="@string/SenhaHint"
            android:inputType="textPassword"
            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputEditText>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/BotaoEntrar"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/botao"
        android:fontFamily="@font/inter_medium"
        android:text="@string/Entrar"
        android:textColor="@color/branco100"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/BotaoCriarConta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="20dp"
        android:fontFamily="@font/inter_medium"
        android:text="@string/CriarConta"
        android:textColor="@color/preto100" />

</LinearLayout>